<header class="header">
  <h1 class="header__title">Edit</h1>
  <a class="header__back-to-top" href="/">Back to all memos</a> 
</header>

<article class="article">
    <form class="form" method="post" action="/memos/<%= @content['id'] %>" >
      <div class="form__title">
        <p class="form__description" >title</p>
        <input type= "hidden" name="_method" value="patch">
        <input class="form__input" type="text" name="title" value="<%= @content['title'] %>">
      </div>
      <div class="form__body">
        <p class="form__description">本文</p>
        <textarea class="form__textarea" name="body" cols=40 rows=6><%= @content['body'] %></textarea>
        <input class="form__button" type="submit" value="Save!">
      </div>
    </form>
    <form class="form" method="post" action="/memos/<%= @content['id'] %>/cancel" >
      <input type= "hidden" name="_method" value="patch">
      <input class="form__button_cancel" type="submit" value="Cancel!">
    </form>
  
    <a class="button" href="/memos/<%= @content['id'] %>">Back to this memo</a>
</article>
